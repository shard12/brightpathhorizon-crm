<%
  pageTitle = 'Settings';
%>
<%- include('partials/header') %>

<div class="page-header">
  <div>
    <h2 class="page-title">Settings</h2>
    <p class="page-subtitle">Manage your preferences and support options</p>
  </div>
</div>

<div class="settings-layout">

  <!-- ── Settings Sidebar Tabs ─────────────── -->
  <div class="settings-tabs">
    <button class="settings-tab active" data-tab="appearance">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="16" height="16"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
      Appearance
    </button>
    <button class="settings-tab" data-tab="notifications">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="16" height="16"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/></svg>
      Notifications
    </button>
    <button class="settings-tab" data-tab="help">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="16" height="16"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
      Help & Support
    </button>
    <button class="settings-tab" data-tab="account">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="16" height="16"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
      Account
    </button>
  </div>

  <!-- ── Settings Content ───────────────────── -->
  <div class="settings-content">

    <!-- Appearance Tab -->
    <div class="settings-panel active" id="tab-appearance">
      <div class="card">
        <h3 class="settings-section-title">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          Theme
        </h3>
        <p class="settings-desc">Choose how the interface looks. Your preference is saved automatically.</p>

        <div class="theme-options">
          <!-- Light -->
          <div class="theme-option" id="themeLight" onclick="window.setTheme('light')">
            <div class="theme-preview light-preview">
              <div class="tp-sidebar"></div>
              <div class="tp-content">
                <div class="tp-bar"></div>
                <div class="tp-card"></div>
                <div class="tp-card short"></div>
              </div>
            </div>
            <div class="theme-option-label">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="14" height="14"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
              Light
            </div>
          </div>
          <!-- Dark -->
          <div class="theme-option" id="themeDark" onclick="window.setTheme('dark')">
            <div class="theme-preview dark-preview">
              <div class="tp-sidebar"></div>
              <div class="tp-content">
                <div class="tp-bar"></div>
                <div class="tp-card"></div>
                <div class="tp-card short"></div>
              </div>
            </div>
            <div class="theme-option-label">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="14" height="14"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
              Dark
            </div>
          </div>
        </div>

        <div class="settings-divider"></div>

        <h3 class="settings-section-title" style="margin-top:0;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/></svg>
          Sidebar Behaviour
        </h3>
        <div class="settings-toggle-row">
          <div>
            <div class="settings-toggle-label">Auto-expand sidebar on hover</div>
            <div class="settings-toggle-desc">Sidebar expands when you hover over it on desktop</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="hoverExpand" checked onchange="savePref('hoverExpand', this.checked)">
            <span class="toggle-slider"></span>
          </label>
        </div>
      </div>
    </div>

    <!-- Notifications Tab -->
    <div class="settings-panel" id="tab-notifications">
      <div class="card">
        <h3 class="settings-section-title">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/></svg>
          Notification Preferences
        </h3>
        <p class="settings-desc">These preferences are saved locally in your browser.</p>

        <div class="settings-toggle-row">
          <div>
            <div class="settings-toggle-label">Follow-up reminders</div>
            <div class="settings-toggle-desc">Get notified when a lead follow-up is due today</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="notif_followup" onchange="savePref('notif_followup', this.checked)">
            <span class="toggle-slider"></span>
          </label>
        </div>
        <div class="settings-divider"></div>
        <div class="settings-toggle-row">
          <div>
            <div class="settings-toggle-label">New lead assigned</div>
            <div class="settings-toggle-desc">Email when a lead is assigned to you</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="notif_assigned" onchange="savePref('notif_assigned', this.checked)">
            <span class="toggle-slider"></span>
          </label>
        </div>
        <div class="settings-divider"></div>
        <div class="settings-toggle-row">
          <div>
            <div class="settings-toggle-label">Help & Feedback received</div>
            <div class="settings-toggle-desc">Admin gets notified when a user submits a help request</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="notif_help" onchange="savePref('notif_help', this.checked)">
            <span class="toggle-slider"></span>
          </label>
        </div>
      </div>
    </div>

    <!-- Help & Support Tab -->
    <div class="settings-panel" id="tab-help">
      <div class="card">
        <h3 class="settings-section-title">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
          Help & Support
        </h3>
        <p class="settings-desc">Send a message to the admin team. We usually respond within 24 hours.</p>

        <form action="/settings/help" method="POST" class="help-form">

          <div class="form-group">
            <label class="form-label">Your Name</label>
            <input type="text" class="form-control" value="<%= user.name %>" readonly style="background:var(--bg); cursor:default;">
          </div>

          <div class="form-group">
            <label class="form-label">Your Email</label>
            <input type="text" class="form-control" value="<%= user.email %>" readonly style="background:var(--bg); cursor:default;">
          </div>

          <div class="form-group">
            <label class="form-label">Category</label>
            <select name="category" class="form-control" required>
              <option value="">Select a category…</option>
              <option value="bug">Bug Report</option>
              <option value="feature">Feature Request</option>
              <option value="account">Account Issue</option>
              <option value="data">Data / Lead Issue</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">Subject</label>
            <input type="text" name="subject" class="form-control" placeholder="Brief description of your issue…" required>
          </div>

          <div class="form-group">
            <label class="form-label">Message</label>
            <textarea name="message" class="form-control" rows="5" placeholder="Describe your issue in detail. Include any steps to reproduce if it's a bug." required></textarea>
          </div>

          <div style="display:flex; gap:10px; align-items:center; margin-top:8px;">
            <button type="submit" class="btn btn-primary">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="14" height="14"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
              Send Message
            </button>
            <span class="help-note">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="13" height="13"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
              Your message is sent directly to admin
            </span>
          </div>

        </form>

        <div class="settings-divider"></div>

        <!-- FAQ -->
        <h3 class="settings-section-title" style="margin-top:0;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
          Quick Answers
        </h3>
        <div class="faq-list">
          <div class="faq-item">
            <div class="faq-q">How do I add a new lead?</div>
            <div class="faq-a">Click "New Lead" in the top bar or go to Leads → Add Lead in the sidebar.</div>
          </div>
          <div class="faq-item">
            <div class="faq-q">How do I export leads to Excel?</div>
            <div class="faq-a">Admins can click "Export" in the top bar or use Leads → Export Excel. This downloads all leads.</div>
          </div>
          <div class="faq-item">
            <div class="faq-q">Can I assign a lead to a different BDE?</div>
            <div class="faq-a">Yes — edit the lead and use the "Assign to BDE" dropdown. Only admins can reassign leads.</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Account Tab -->
    <div class="settings-panel" id="tab-account">
      <div class="card">
        <h3 class="settings-section-title">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          Account Information
        </h3>
        <div class="account-info-grid">
          <div class="account-field">
            <span class="account-field-label">Name</span>
            <span class="account-field-value"><%= user.name %></span>
          </div>
          <div class="account-field">
            <span class="account-field-label">Email</span>
            <span class="account-field-value"><%= user.email %></span>
          </div>
          <div class="account-field">
            <span class="account-field-label">Role</span>
            <span class="account-field-value">
              <span class="badge <%= user.role === 'admin' ? 'badge-admin' : 'badge-bde' %>">
                <%= user.role === 'admin' ? 'Administrator' : 'Sales BDE' %>
              </span>
            </span>
          </div>
        </div>
        <div class="settings-divider"></div>
        <h3 class="settings-section-title" style="margin-top:0;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" width="18" height="18"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          Security
        </h3>
        <div style="display:flex; gap:10px; flex-wrap:wrap;">
          <a href="/auth/forgot" class="btn btn-outline">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="13" height="13"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
            Change Password
          </a>
          <a href="/auth/logout" class="btn btn-danger">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="13" height="13"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
            Sign Out
          </a>
        </div>
      </div>
    </div>

  </div><!-- /.settings-content -->
</div><!-- /.settings-layout -->

<script>
  // ── Tab switching ───────────────────────────────────────────
  document.querySelectorAll('.settings-tab').forEach(tab => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.settings-tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.settings-panel').forEach(p => p.classList.remove('active'));
      tab.classList.add('active');
      document.getElementById('tab-' + tab.dataset.tab).classList.add('active');
    });
  });

  // ── Save preference to localStorage ────────────────────────
  function savePref(key, value) {
    localStorage.setItem('crm-pref-' + key, JSON.stringify(value));
  }

  function loadPref(key, defaultValue) {
    const stored = localStorage.getItem('crm-pref-' + key);
    return stored !== null ? JSON.parse(stored) : defaultValue;
  }

  // ── Load all saved prefs on page ready ──────────────────────
  document.addEventListener('DOMContentLoaded', () => {

    // Sync theme option cards using app.js's window.setTheme
    const savedTheme = localStorage.getItem('crm-theme') || 'light';
    window.setTheme(savedTheme);

    // Restore notification toggles from localStorage
    ['notif_followup', 'notif_assigned', 'notif_help'].forEach(id => {
      const el = document.getElementById(id);
      if (el) el.checked = loadPref(id, true);
    });

    // Restore sidebar hover expand pref
    const hoverExpand = document.getElementById('hoverExpand');
    if (hoverExpand) hoverExpand.checked = loadPref('hoverExpand', true);

    // Open directly to help tab if redirected with #help hash
    if (window.location.hash === '#help') {
      document.querySelectorAll('.settings-tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.settings-panel').forEach(p => p.classList.remove('active'));
      document.querySelector('[data-tab="help"]').classList.add('active');
      document.getElementById('tab-help').classList.add('active');
    }
  });
</script>

<%- include('partials/footer') %>