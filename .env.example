# =============================================
# BrightPathHorizon CRM - Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=brightpathhorizon

# Session Secret (use a long random string in production)
SESSION_SECRET=change-this-to-a-very-long-random-secret-string-in-production

# App URL (for deployment)
APP_URL=http://localhost:3000
